
<h1>Blog details screen</h1>
<p>Title: <%= @blog.title %></p>
<p>Content: <%= @blog.content %></p>





<%= form_with(model: @post, local: true) do |form| %>

  <div class="post_Autheur">
    <%= form.label :Autheur %>
    <%= form.text_field :Autheur %>
  </div>
  <div class="post_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>

    <% end %>
